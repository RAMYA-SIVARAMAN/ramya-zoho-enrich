#include<stdio.h>
int main()
{
int n,a[10][10],i,k=1,end,j,l,m;
scanf("%d",&n);
for(i=0;i<n;i++)
{
    for(j=0;j<n;j++)
    {
        a[i][j]=0;
    }
}
i=0;j=n/2;
a[i][j]=k;
end=n*n;
k++;
while(k<=end)
{
    l=(i-1+n)%n;
    m=(j+1+n)%n;
    if(a[l][m]==0)
{
    i=l;
    j=m;
    a[i][j]=k;
    k++;
}
else
{
    i=i+1;
    a[i][j]=k;
     k++;
}
}
for(i=0;i<n;i++)
{
    for(j=0;j<n;j++)
    {
        printf("%d ",a[i][j]);
    }
    printf("\n");
}}
